@{
    ViewData["Title"] = "Books page";
}

@model IList<Product>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Products
                    </h3>

                    <a asp-action="Create" class="btn btn-success">New</a>
                </div>

                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Production date</th>
                            <th>Expiration date</th>
                            <th>Manufacturer</th>
                            <th>Country</th>
                        </tr>

                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>@book.Id</td>
                                <td>@book.Name</td>
                                <td>@book.ProductionDate</td>
                                <td>@book.ExpirationDate</td>
                                <td>@book.Manufacturer</td>
                                <td>@book.Country</td>
                                <td>
                                    <a asp-action="View" asp-route-id="@book.Id" class="btn btn-info">View</a>
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>